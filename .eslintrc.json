{
    "extends": [
        "airbnb"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "curly": [
            "error",
            "multi-line",
            "consistent"
        ],
        "object-curly-newline": [
            "error",
            {
                "consistent": true,
                "multiline": true
            }
        ],
        "max-statements-per-line": [
            "error",
            {
                "max": 1
            }
        ],
        "max-len": [
            "error",
            120
        ],
        "prefer-destructuring": [
            "error",
            {
                "array": false,
                "object": true
            }
        ],
        "no-plusplus": 0,
        "no-dupe-class-members": 0,
        "no-continue": 0,
        "no-restricted-syntax": 0,
        "lines-between-class-members": 0,
        "import/prefer-default-export": 0,
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": false
            }
        ]
    },
    "parser": "@typescript-eslint/parser"
}